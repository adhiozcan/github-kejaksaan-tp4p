<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#91dc5a"
        android:clipToPadding="true"
        android:elevation="6dp"
        app:behavior_peekHeight="52dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        tools:ignore="MissingPrefix">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/menu_berita"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:onClick="onMenuButtonClicked"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_newspaper"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berita"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_jadwal"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:onClick="onMenuButtonClicked"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_data_permohonan"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:onClick="onMenuButtonClicked"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_folder"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permohonan"
                    android:textAlignment="center"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_assignment"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:onClick="onMenuButtonClicked"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clipboard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penugasan"
                    android:textAlignment="center"
                    android:textColor="#91dc5a"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/menu_proyek"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:onClick="onMenuButtonClicked"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_office_worker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projects"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsip"
                    android:textAlignment="center"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checklist"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#91dc5a"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clipboard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengaturan"
                    android:textAlignment="center"
                    android:textColor="#91dc5a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_white"
                android:elevation="@dimen/space_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_information"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textAlignment="center"
                    android:textColor="#91dc5a"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>
</merge>