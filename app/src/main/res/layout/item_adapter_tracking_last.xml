<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white">

    <View
        android:layout_width="4dp"
        android:layout_height="45dp"
        android:layout_marginLeft="34dp"
        android:background="#7ecacaca"
        android:minHeight="62dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingBottom="@dimen/space_8dp"
        android:paddingRight="@dimen/space_16dp"
        android:paddingTop="@dimen/space_8dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/panel_content"
            android:layout_marginLeft="24dp"
            android:background="@drawable/shape_round_orange_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_24dp"
                android:text="Tanggal"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_24dp"
                android:layout_marginRight="@dimen/space_16dp"
                android:text="Status"
                android:textColor="@color/textColorBlack"/>

            <TextView
                android:id="@+id/txt_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_24dp"
                android:layout_marginRight="@dimen/space_16dp"
                android:text="Keterangan"
                android:textColor="@color/textColorBlack"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>