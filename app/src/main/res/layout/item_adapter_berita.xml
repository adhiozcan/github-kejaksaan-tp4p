<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_4dp"
    android:layout_marginRight="@dimen/space_4dp"
    android:layout_marginTop="@dimen/space_8dp"
    android:background="@drawable/button_default_white"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="@dimen/space_16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/space_24dp"
            android:layout_height="@dimen/space_24dp"
            android:layout_marginRight="@dimen/space_16dp"
            android:src="@drawable/ic_news_paper"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_berita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Permohonan Penangguhan Penahanan"
                android:textColor="#d23e3d3d"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/tanggal_terbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Terbit"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/content_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="4"
        android:text="Content goes here"
        android:textColor="@color/textColorBlack"/>

</LinearLayout>
