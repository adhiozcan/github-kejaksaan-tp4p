<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16dp">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space_16dp"
                android:src="@drawable/tp4_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA PENGGUNA"
                android:textColor="#727272"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#727272"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/nama_petugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rizmaulana"
                    android:textColor="#424242"
                    android:textSize="@dimen/text_size_16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_32dp"
                    android:text="Jabatan"
                    android:textColor="#727272"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rizki Maulana"
                    android:textColor="#424242"
                    android:textSize="@dimen/text_size_16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_32dp"
                    android:text="Status"
                    android:textColor="#727272"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textColor="#424242"
                    android:textSize="@dimen/text_size_16sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16dp"
                android:text="UNIT"
                android:textColor="#727272"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daerah Kejaksaan"
                    android:textColor="#727272"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/area_kejaksaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8674"
                    android:textColor="#424242"
                    android:textSize="@dimen/text_size_16sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_32dp"
                android:background="@drawable/button_round_orange"
                android:gravity="center"
                android:onClick="logout"
                android:paddingBottom="@dimen/space_12dp"
                android:paddingLeft="@dimen/space_16dp"
                android:paddingRight="@dimen/space_16dp"
                android:paddingTop="@dimen/space_12dp"
                android:text="Logout"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
