<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_8dp"
    android:layout_marginRight="@dimen/space_8dp"
    android:layout_marginTop="@dimen/space_8dp"
    android:background="@color/white"
    android:elevation="@dimen/space_6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_24dp"
        android:paddingLeft="@dimen/space_32dp"
        android:paddingRight="@dimen/space_32dp"
        android:paddingTop="@dimen/space_24dp">

        <TextView
            android:id="@+id/judul_penugasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_8dp"
            android:paddingTop="@dimen/space_8dp"
            android:text="Judul Penugasan"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content_penugasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ipsum"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.2dip"
        android:background="#f9f9f9"
        android:paddingLeft="@dimen/space_32dp"
        android:paddingRight="@dimen/space_32dp">

        <TextView
            android:id="@+id/btn_detail_penugasan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_24dp"
            android:layout_marginTop="@dimen/space_12dp"
            android:background="@drawable/button_round_orange"
            android:elevation="@dimen/space_2dp"
            android:gravity="center"
            android:paddingBottom="@dimen/space_8dp"
            android:paddingTop="@dimen/space_8dp"
            android:text="Lihat Detail"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>