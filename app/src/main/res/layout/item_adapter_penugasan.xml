<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_12dp"
    android:layout_marginRight="@dimen/space_12dp"
    android:layout_marginTop="@dimen/space_8dp"
    android:background="@color/white"
    android:elevation="@dimen/space_6dp"
    android:orientation="vertical"
    android:padding="@dimen/space_16dp">

    <TextView
        android:id="@+id/judul_penugasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_8dp"
        android:paddingTop="@dimen/space_8dp"
        android:text="Title Goes Here"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content_penugasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ipsum"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_size_14sp"/>

    <TextView
        android:id="@+id/btn_detail_penugasan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:background="@drawable/button_default_orange"
        android:elevation="@dimen/space_4dp"
        android:gravity="center"
        android:paddingBottom="@dimen/space_8dp"
        android:paddingTop="@dimen/space_8dp"
        android:text="Lihat Detail"
        android:textStyle="bold"/>
</LinearLayout>