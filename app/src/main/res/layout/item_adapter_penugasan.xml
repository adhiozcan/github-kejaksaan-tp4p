<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_4dp"
    android:layout_marginRight="@dimen/space_4dp"
    android:layout_marginTop="@dimen/space_8dp"
    android:background="@drawable/button_default_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_12dp"
    android:paddingTop="@dimen/space_12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16dp">

        <TextView
            android:id="@+id/nomor_proyek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Proyek"
            android:textColor="@color/orange_500"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tanggal_proyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 Mei 2017"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/judul_penugasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Penugasan"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nama_pemohon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slamet Riyanto"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/instansi_pemohon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT. Icon Plus"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/content_penugasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ipsum"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:padding="@dimen/space_16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_detail_penugasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_orange"
            android:elevation="@dimen/space_2dp"
            android:gravity="center"
            android:padding="@dimen/space_8dp"
            android:text="Info Detail"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>