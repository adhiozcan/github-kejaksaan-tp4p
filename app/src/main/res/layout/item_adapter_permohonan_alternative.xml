<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/space_8dp"
              android:layout_marginRight="@dimen/space_8dp"
              android:layout_marginTop="@dimen/space_4dp"
              android:background="@drawable/button_default_white"
              android:elevation="@dimen/space_6dp"
              android:gravity="center"
              android:minHeight="100dp"
              android:orientation="vertical"
              android:paddingBottom="@dimen/space_24dp"
              android:paddingLeft="@dimen/space_24dp"
              android:paddingRight="@dimen/space_24dp"
              android:paddingTop="@dimen/space_24dp">

    <TextView
        android:id="@+id/judul_permohonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:fontFamily="sans-serif-light"
        android:text="Permohonan Penangguhan Penahanan"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_size_24sp"/>

    <TextView
        android:id="@+id/nama_pengirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Nama Pemohon"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/instansi_pengirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16dp"
        android:fontFamily="sans-serif-light"
        android:text="Instansi Pengirim"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"/>
</LinearLayout>
